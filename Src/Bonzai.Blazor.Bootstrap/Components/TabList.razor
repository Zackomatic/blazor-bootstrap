@inherits BootstrapContainerBase

<ul role="tablist" @attributes="AdditionalAttributes" class="@Classes">
    @ChildContent
</ul>

@code {
    [Parameter]
    public bool Pills { get; set; }

    [Parameter]
    public bool Vertical { get; set; }

    protected override string DefaultClass
    {
        get
        {
            var classBuilder = new ClassNameBuilder("nav");

            if(Pills)
            {
                classBuilder.AddClassName("nav-pills");
            }
            else if (!Vertical)
            {
                classBuilder.AddClassName("nav-tabs");
            }

            if(Vertical)
            {
                classBuilder.AddClassName("flex-column");
            }

            return classBuilder.GetClassNames();
        }
    }
}
