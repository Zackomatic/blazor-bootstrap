<h6 class="h-6 mb-2 fw-bold">
    <TypeName Inline="true">
        @Type.GetFriendlyName()
    </TypeName>
    <em>@Name:</em>
</h6>
<div class="ps-4">
    @ChildContent
</div>

@code {
    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public Type Type { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}