<Row class="mb-2">
    <Column>
        <Btn OnClick="DoSomething">Do Something</Btn>
    </Column>
</Row>
@if(ShowContent)
{
    <Row>
        <Column>
            You did something.
        </Column>
    </Row>
}

@code {
    private bool ShowContent { get; set; }

    private void DoSomething()
    {
        ShowContent = !ShowContent;
    }
}
